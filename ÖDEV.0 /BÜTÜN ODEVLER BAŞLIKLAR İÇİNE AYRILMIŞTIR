liste = [123,789]
yeni_liste = len(liste) // 2
liste = liste[:yeni_liste] + [456] + liste[yeni_liste:]                                                      #   LİSTENİN ORTASINA YENİ SAYI EKLER.
print(liste)
#_______________________________________________________________________________

liste = [123, 456, 789]
ayır = len(liste) // 2 
tuple_ekle = (liste[ayır], )                                                                              #LİSTENİN ORTSASINA BİR TUPLE EKLEME.
yeni_tuple = liste[:ayır] + [tuple_ekle] + liste[ayır + 1:]
print(yeni_tuple)

